<%= form_for([@site, @site.comments.build], :remote => true, :html => { :id => 'comment_form' }) do |f| %>
<div class="field">
	<%= f.label :commenter %>
	<br />
	<%= f.text_field :commenter %>
</div>
<div class="field">
	<%= f.label :email %>
	<br />
	<%= f.text_field :email %>
</div>
<div class="field">
	<%= f.label :body %>
	<br />
	<%= f.text_area :body, :rows => 4 %>
</div>
<div class="actions">
	<%= f.submit %>
</div>
<% end %>